{
  "hosting": {
    "public": "dist/pwa-ng",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source" : "**/*.@(jpg|jpeg|gif|png)",
        "headers" : [
          {
            "key" : "Cache-Control",
            "value" : "max-age=86400"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/manifest",
        "destination": "/index.html"
      },
      {
        "source": "/firebase",
        "destination": "/index.html"
      },
      {
        "source": "/lighthouse",
        "destination": "/index.html"
      },
      {
        "source": "/assets",
        "destination": "/index.html"
      },
      {
        "source": "/about",
        "destination": "/index.html"
      }
    ]
  }
}
